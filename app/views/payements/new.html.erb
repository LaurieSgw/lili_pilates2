<div class="container">
  <div class="row py-4">
    <div class="col">
      <h1>Récapitulatif de la réservation</h1>
      <p>Achat de <strong><%= @subscription.sub_type "séance".pluralize %> </strong>  <strong><%= humanized_money_with_symbol @subscritpion.price %></strong></p>
      <button id="pay" class="btn btn-primary">Payer</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @subscritpion.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
